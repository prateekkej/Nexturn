<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_above="@+id/card_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_person_outline_black_24dp" />

        <view
            android:id="@+id/card_name"
            class="com.nexturn.ModifiedViews.ourTextView"
            id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:text="Full Name"
            android:textSize="18sp" />

        <view
            android:id="@+id/card_phone"
            class="com.nexturn.ModifiedViews.ourTextView"
            id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="+91-XXXXXXXXXX"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <view
                android:id="@+id/view16"
                class="com.nexturn.ModifiedViews.ourTextView"
                id="@+id/view14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/card_call"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Going to :"
                android:textAlignment="center"
                android:textSize="18sp" />

            <view
                android:id="@+id/card_destination"
                class="com.nexturn.ModifiedViews.ourTextView"
                id="@+id/view15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="XXXXXXXXXX"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_fb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/card_sms"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:tint="@color/colorBackground"
                app:srcCompat="@drawable/ic_sms_black_24dp" />

            <ImageView
                android:id="@+id/card_call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:tint="@color/colorBackground"
                app:srcCompat="@drawable/ic_call_black_24dp" />
        </LinearLayout>

    </LinearLayout>
    <![CDATA[

    >

]]>
</android.support.v7.widget.CardView>
