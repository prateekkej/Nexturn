<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/card_name"
            android:layout_alignEnd="@+id/card_phone"

            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_person_outline_black_24dp" />

        <view
            android:id="@+id/card_name"
            class="com.nexturn.ModifiedViews.ourTextView"
            id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Full Name" />

        <view
            android:id="@+id/card_phone"
            class="com.nexturn.ModifiedViews.ourTextView"
            id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="22dp"
            android:text="+91-XXXXXXXXXX" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <view
                android:id="@+id/view16"
                class="com.nexturn.ModifiedViews.ourTextView"
                id="@+id/view14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/card_phone"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Going to :"
                android:textAlignment="center"
                android:textSize="12sp" />

            <view
                android:id="@+id/card_destination"
                class="com.nexturn.ModifiedViews.ourTextView"
                id="@+id/view15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view16"
                android:layout_toEndOf="@+id/view16"
                android:layout_weight="1"
                android:text="XXXXXXXXXX"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/card_sms"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:tint="@color/colorBackground"
                app:srcCompat="@drawable/ic_sms_black_24dp" />

            <ImageView
                android:id="@+id/card_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:tint="@color/colorBackground"
                app:srcCompat="@drawable/ic_call_black_24dp" />
        </LinearLayout>

    </RelativeLayout>
    >

</android.support.v7.widget.CardView>
